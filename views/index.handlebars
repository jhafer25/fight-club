<div class="jumbotron">
	<div class="row text-center">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h2>Prepare To Fight</h2>
		</div>
	</div>
	<div class="marketing form text-center">
		<div class="row text-center">
			<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"></div>
			<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
    			<form action="/fighters" method="POST">
	      			<input type="text" id="fighter_name" name="fighter_name" class="form-control" placeholder="Your Fight Name">
	      			<select class="form-control" id="fighter_gender" name="fighter_gender">
                        <option value="" disabled selected>-- Choose Your Gender --</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
	      			<input type="text" id="fighter_image" name="fighter_image" class="form-control" placeholder="Your Fight Image">
	      			<button type="submit" class="btn btn-primary add-fighter">Become a Fighter</button>
	      		</form>
	    	</div>
	  	</div>
	</div>
	
</div>
<div class="container">
	<h1 class="text-center">Current Potential Fighters</h1>
	<div class="row text-center">
		<div class="slider">
    		{{#each fighters}}
          	<img class="rounded mx-auto d-block" src="{{this.fighter_image}}"/>
        
        	{{/each}}
	    </div>

      	
	</div>
</div>
